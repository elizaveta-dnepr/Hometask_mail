<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/person_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"

            />

        <TextView
            android:id="@+id/sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/person_photo"
            android:text="Elizaveta Myronenko"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mail_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sender"
            android:layout_toRightOf="@+id/person_photo"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Тут будет тема письма"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mail_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mail_theme"
            android:layout_toRightOf="@+id/person_photo"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Здесь текст письма. Если текст длинный -нужно поставть троеточие" />

    </RelativeLayout>

</LinearLayout>